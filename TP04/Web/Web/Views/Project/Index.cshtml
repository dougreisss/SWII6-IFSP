@model List<ProjectViewModel> 

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>List of projects</h1>
</div>

<hr />

@if (!String.IsNullOrEmpty(@ViewBag.ErrorMessage)) {

    <h1>Erro</h1>
    <p>@ViewBag.ErrorMessage</p>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Project</a>
</p>

<hr />

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model![0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model![0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model![0].EndDate)
            </th>
            <th style="text-align: center;">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => project.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => project.EndDate)
                </td>
                <td>
                    <div class="flex">
                        <div style="display: flex; justify-content: space-around">
                            <a asp-action="Edit" asp-controller="Project" asp-route-id="@project.Id">
                                <button class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Edit">
                                    Edit
                                </button>
                            </a>
                            <form asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id" method="post">
                                <button type="submit" class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Delete">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>