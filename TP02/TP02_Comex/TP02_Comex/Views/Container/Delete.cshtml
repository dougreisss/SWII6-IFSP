@model Container

@{
    ViewData["Title"] = "Delete Container";
}

<h1>Delete Container</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Container</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Container Number</dt>
        <dd class="col-sm-10">@Model.Numero</dd>

        <dt class="col-sm-2">Container Type</dt>
        <dd class="col-sm-10">@Model.ContainerType</dd>

        <dt class="col-sm-2">Container Size</dt>
        <dd class="col-sm-10">@Model.ContainerSize</dd>

        <dt class="col-sm-2">BL Number</dt>
        <dd class="col-sm-10">@Model.Bl?.Numero</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdContainer" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
